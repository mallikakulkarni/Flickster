<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iVMovieThumbnail"
        android:layout_toRightOf="@+id/iVMovieThumbnail"
        android:textColor="@color/movieTitle" />

    <TextView
        android:text="TextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/iVMovieThumbnail"
        android:layout_toEndOf="@+id/iVMovieThumbnail"
        android:id="@+id/tvOverview"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textIsSelectable="true"
        android:textColor="@color/movieOverview"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/iVMovieThumbnail"
        tools:src="@mipmap/ic_launcher"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="btn1"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_media_play"
        android:background="@drawable/playicon"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/iVMovieThumbnail"
        android:layout_alignEnd="@+id/iVMovieThumbnail"
        android:layout_marginRight="144dp"
        android:layout_marginEnd="144dp" />

</RelativeLayout>